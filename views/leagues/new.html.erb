<div class="panel panel-default">
  <div class="panel-heading">
    Create League
  </div>
  <div class="panel-body">
    <div class="container">

      <%= form_for @league do |f| %>

        <div class="row">

          <div class="col-md-4">
            <div class="form-group">
              <label>League Name</label>
              <%= f.text_field :league_name, placeholder: "ex: Tuesday", class: "form-control", required: true %>
            </div>
          </div>

          

        </div>

        <div><%= f.submit "Create League", class: "btn btn-normal" %></div>

      <% end %>

    </div>
  </div>
</div>
